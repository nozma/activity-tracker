{
    "name": "activity-tracker",
    "private": true,
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && venv/bin/python ../main.py",
        "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "build:frontend": "cd frontend && npm run build",
        "build:pyinstaller": "pyinstaller main.py -y --distpath dist --clean --add-data \"frontend/dist:frontend/dist\" --windowed -n ActivityTracker",
        "build": "npm run build:frontend && npm run build:pyinstaller"
    },
    "devDependencies": {
        "concurrently": "^7.0.0"
    },
    "dependencies": {
        "react-activity-calendar": "^2.7.8",
        "react-tooltip": "^5.28.0"
    }
}
